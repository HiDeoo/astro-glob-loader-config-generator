---
import '@unocss/reset/tailwind.css'

import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import VisuallyHidden from '../components/VisuallyHidden.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <main id="content">
      <h1>
        <VisuallyHidden>Astro Glob Loader Config Generator</VisuallyHidden>
        <span aria-hidden="true">Astro <code>`glob()`</code> Loader Config Generator</span>
      </h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  :where(html) {
    --color-red-500: oklch(63.56% 0.2082 25.38);

    --color-purple-400: oklch(71.88% 0.1783 305.46);

    --color-zinc-50: oklch(98.48% 0 0);
    --color-zinc-400: oklch(71.27% 0.0128 286.07);
    --color-zinc-600: oklch(44.31% 0.0141 285.81);
    --color-zinc-700: oklch(37.01% 0.0113 285.84);
    --color-zinc-800: oklch(27.47% 0.006 286);
    --color-zinc-900: oklch(21.02% 0.006 285.87);

    --font-base: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue',
      Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    --font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;

    --font-extrabold: 800;

    --rounded: 0.25rem;
    --rounded-md: 0.375rem;

    --size-npx: -1px;
    --size-px: 1px;
    --size-0-5: 0.125rem;
    --size-1: 0.25rem;
    --size-1-5: 0.375rem;
    --size-2: 0.5rem;
    --size-3: 0.75rem;
    --size-4: 1rem;
    --size-5: 1.25rem;
    --size-8: 2rem;
    --size-12: 3rem;

    --text-xs: 0.75rem;
    --text-sm: 0.95rem;
    --text-lg: 1.125rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    --text-4xl: 2.25rem;
  }

  body {
    accent-color: var(--color-purple-400);
    align-items: center;
    background-color: var(--color-zinc-900);
    color: var(--color-zinc-50);
    display: flex;
    flex-direction: column;
    font-family: var(--font-base);
    line-height: 1.8;
  }

  main {
    max-width: 768px;
    padding: var(--size-8) var(--size-4) var(--size-4);
    width: 100%;
  }

  h1 {
    font-size: var(--text-3xl);
    font-weight: var(--font-extrabold);
    line-height: 1.25;
    margin-bottom: var(--size-8);
    text-align: center;
    text-wrap: balance;
  }

  code {
    background-color: var(--color-zinc-700);
    border-radius: var(--rounded-md);
    font-family: var(--font-mono);
    font-size: var(--text-2xl);
    margin-inline: var(--size-2);
    padding: var(--size-1-5) var(--size-0-5) var(--size-1);
  }

  @media (min-width: 40rem) {
    main {
      padding: var(--size-12) var(--size-8) var(--size-8);
    }

    h1 {
      font-size: var(--text-4xl);
      margin-bottom: var(--size-12);
    }

    code {
      font-size: var(--text-3xl);
    }
  }
</style>
